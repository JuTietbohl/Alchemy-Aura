@using AlchemyAndAura.Models;
@model List<CartItem>

@{
    ViewData["Title"] = "Your Cart";
}

<h1>Your Cart</h1>

@if (Model == null || !Model.Any())
{
    <p>Your cart is empty. Time to buy some potions!</p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Potion</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Potion.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Potion.Price.ToString("C")</td>
                <td>@((item.Potion.Price * item.Quantity).ToString("C"))</td>
                <td>
                    <form asp-controller="Cart" asp-action="RemoveFromCart" method="post">
                        <input type="hidden" name="potionId" value="@item.Potion.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
        <tfoot>
        <tr>
            <td colspan="3" class="text-right"><strong>Grand Total:</strong></td>
            <td><strong>@Model.Sum(item => item.Potion.Price * item.Quantity).ToString("C")</strong></td>
            <td></td>
        </tr>
        </tfoot>
    </table>
}

<div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Continue Shopping</a>
    <a href="#" class="btn btn-success">Checkout (Coming Soon!)</a>
</div>